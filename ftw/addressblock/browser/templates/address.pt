<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="python: 1"
      i18n:domain="ftw.addressblock">

    <tal:block>
        <p>
            <tal:addresstitle tal:condition="context/address_title">
                <span tal:replace="context/address_title"/><br/>
            </tal:addresstitle>
            <tal:addresstitle condition="context/department">
                <span tal:replace="context/department"/><br/>
            </tal:addresstitle>
            <span tal:replace="structure view/get_address_as_html"/><br/>
            <span tal:replace="context/zip_code"/>
            <span tal:replace="context/city"/><br/>
            <tal:tel tal:condition="context/phone">
                <tal:translate i18n:translate="text_phone">
                    Tel.
                    <tal:num i18n:name="num"
                             tal:content="context/phone"/>
                </tal:translate>
                <br/>
            </tal:tel>
            <tal:tel tal:condition="context/fax|nothing">
                <tal:translate i18n:translate="text_fax">
                    Fax
                    <tal:num i18n:name="num"
                             tal:content="context/fax"/>
                </tal:translate>
                <br/>
            </tal:tel>

            <tal:email tal:condition="context/show_email">
                <a tal:condition="context/email|nothing"
                   tal:content="context/email"
                   tal:attributes="href string:mailto:${context/email}"/>
            </tal:email>

            <tal:www condition="context/www|nothing">
                <br/>
                <a tal:content="context/www"
                   tal:attributes="href context/www"/>
            </tal:www>
        </p>

        <tal:openingHours tal:condition="context/opening_hours">
            <a name="opening_hours"></a>
            <h2 i18n:translate="label_opening_hours">Opening hours</h2>
            <p tal:content="structure context/opening_hours/output"></p>
        </tal:openingHours>

        <tal:block tal:condition="context/directions">
            <a name="directions"></a>
            <h2 i18n:translate="label_directions">Directions</h2>
            <p tal:content="structure context/directions/output"></p>
        </tal:block>

        <tal:block tal:condition="context/accessibility">
            <a name="accessibility"></a>
            <h2 i18n:translate="label_accessibility">Accessibility</h2>
            <p tal:content="structure context/accessibility/output"></p>
        </tal:block>
    </tal:block>
</html>
